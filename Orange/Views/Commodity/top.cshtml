
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>top</title>
    @*<script type="text/javascript" src="~/basic/js/jquery-1.7.min.js"></script>
    <script type="text/javascript" src="~/basic/js/quick_links.js"></script>

    <script type="text/javascript" src="../AmazeUI-2.4.2/assets/js/amazeui.js"></script>
    <script type="text/javascript" src="../Scripts/jquery.imagezoom.min.js"></script>
    <script type="text/javascript" src="../Scripts/jquery.flexslider.js"></script>
    <script type="text/javascript" src="../Scripts/list.js"></script>*@
    
</head>
<body>
   @{var user = (Orange.ViewModel.VMUser)Session["User"];  
        var res = ViewBag.res;}
    <div class="hmtop">
        <!--顶部导航条 -->
        <div class="am-container header">
            <ul class="message-l">
                <div class="topMessage">
                    <div class="menu-hd">
                        @{
                            var remove = Request.QueryString["remove_user"]; }
                        @if (remove == "1")
                        {
                            <script>

                             alert("注销成功")
                            </script>
                        }
                        @if (user == null)
                        {
                            <a href="../Login/Login" target="_top" class="h">亲，请登录</a>
                            <a href="../Login/register" target="_top">免费注册</a>
                        }
                        else
                        {
                            <p> 欢迎来到Orange：<a href="../Person/Index" target="_top" class="h">@user.nikename</a>&nbsp;<a id="remove_user" href="../Commodity/Index?remove_user=1">[注销]</a></p>



                        }
                    </div>
                </div>
            </ul>
            <ul class="message-r">
                <div class="topMessage home">
                    <div class="menu-hd"><a href="../Commodity/Index" target="_top" class="h">商城首页</a></div>
                </div>
                <div class="topMessage my-shangcheng">
                    <div class="menu-hd MyShangcheng"><a href="../Person/Index" target="_top"><i class="am-icon-user am-icon-fw"></i>个人中心</a></div>
                </div>
                <div class="topMessage mini-cart">
                    <div class="menu-hd"><a id="mc-menu-hd" href="../shopcart/Index" target="_top"><i class="am-icon-shopping-cart  am-icon-fw"></i><span>购物车</span>
                        @if (res != null)
                        { <strong id="J_MiniCartNum" class="h">@res</strong>}
                        else
                        {<strong id="J_MiniCartNum" class="h">0</strong>}</a></div>
                </div>
                <div class="topMessage favorite">
                    <div class="menu-hd"><a href="#" target="_top"><i class="am-icon-heart am-icon-fw"></i><span>收藏夹</span></a></div>
            </ul>
        </div>

        <!--悬浮搜索框-->

        <div class="nav white">
          
            <div class="logoBig">
                <li><img src="../images/logobig.png" /></li>
            </div>

            <div class="search-bar pr">
                <a name="index_none_header_sysc" href="javascript:href()"></a>
                <form>
                    <input id="searchInput" name="index_none_header_sysc" type="text" placeholder="搜索">
                    <input id="ai-topsearch" class="submit am-btn" value="搜索" index="1" type="button">
                </form>
            </div>
        </div>
        <script>

            $('#ai-topsearch').click(function() {
                if ($('#searchInput').text != null) {
                   
                    document.location.href = "../Commodity/Soure?Name="+$('#searchInput').val();
                }
            })
        </script>
        <div class="clear"></div>
    </div>


</body>
</html>
