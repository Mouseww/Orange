                                $(function sub(){
                                    var ress_id = $('.user-addresslist defaultAddr').attr('id');

                                })
                            </script>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>

        <div class="clear"></div>
    </div>
    
    <div class="footer">
